<%- model_class = Odisseia -%>
<% title 'Odisseias' %>

<%= render 'layouts/messages' %>

<div class="row btn-panel">
  <div class="col-6 col-md-8">
    <%= link_to new_odisseia_path, class: 'btn btn-primary' do %><i class="fa fa-plus"></i> Novo<% end %>
  </div>
  <div class="col-6 col-md-4">
    <%= form_tag(odisseias_path, method: 'get', id: 'odisseia-default-search-form') do %>
      <div class="input-group">
        <%= text_field_tag :s, params[:s], class: 'form-control', placeholder: 'Pesquisar', autofocus: true %>
        <div class="input-group-append btn-group with-border">
          <%= button_tag class: 'btn btn-success', name: '' do %><i class="fa fa-search"></i><% end %>
          <%= button_tag '', type: 'button', class: 'btn btn-success btn-sm dropdown-toggle', name: '' %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="card">
  <table class="table table-striped table-hover" id="odisseias-table" data-toggle="tableify">
    <thead>
      <tr>
        <th width="50" class="text-center"></th>
        <th><%= model_class.human_attribute_name :texto %></th>
        <th><%= model_class.human_attribute_name :fonte %></th>
      </tr>
    </thead>
    <tbody>
      <% @odisseias.each do |odisseia| %>
        <tr>
          <td class="tableify-actions">
            <% if cannot? :read, Odisseia %><%= link_to odisseia_path(odisseia), class: 'tableify-default-action' do %><i class="fa fa-eye"></i> Visualizar<% end %><% end %>
            <% if can? :update, Odisseia %><%= link_to edit_odisseia_path(odisseia), class: 'tableify-default-action' do %><i class="fa fa-pencil"></i> Editar<% end %><% end %>
            <% if can? :destroy, Odisseia %><%= link_to odisseia_path(odisseia), method: :delete, data: { confirm: 'Tem certeza que deseja excluir este registro?' } do %><i class="fa fa-trash"></i> Excluir<% end %><% end %>
          </td>
          <td><%= odisseia.texto %></td>
          <td><%= odisseia.fonte %></td>
        </tr>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <th colspan="3">
          <%= page_entries_info @odisseias %>
        </th>
      </tr>
    </tfoot>
  </table>
</div>

<%= will_paginate @odisseias, list_classes: %w[pagination justify-content-center mt-lg], inner_window: 1 %>
